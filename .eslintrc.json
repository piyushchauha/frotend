{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "overrides": [
    {
      "files": ["**/*.{js,mjs,cjs,jsx}"],
      "rules": {        
        "semi": ["error", "always"]        
      }
    }
  ]
}
